<% content_for :title, "Showing sale" %>

<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <% if notice.present? %>
    <p class="py-3 px-4 bg-green-50 mb-6 text-green-600 font-medium rounded-lg border border-green-200 shadow-sm" id="notice"><%= notice %></p>
  <% end %>

  <div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="px-6 py-5 border-b border-gray-200">
      <h1 class="text-2xl font-bold text-gray-900">Sale Details</h1>
    </div>

    <div class="px-6 py-6">
      <%= render @sale %>
    </div>

    <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
      <div class="flex flex-col sm:flex-row gap-2">
        <%= link_to "Edit", edit_sale_path(@sale), class: "inline-flex justify-center items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200" %>
        <%= link_to "Back to sales", sales_path, class: "inline-flex justify-center items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200" %>
        <%= button_to "Delete", @sale, method: :delete, class: "inline-flex justify-center items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors duration-200", data: { turbo_confirm: "Are you sure you want to delete this sale?" } %>
      </div>
    </div>
  </div>
</div>
